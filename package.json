{
  "name": "podcastlive",
  "version": "1.0.0",
  "description": "",
  "main": "server/index.js",
  "scripts": {
    "build": "npm-run-all -s build:sass build:pug build:webpack",
    "start": "forever -c 'node --harmony' server/index.js",
    "dev": "npm-run-all -p dev:db dev:app",
    "dev:db": "docker-compose -f dev-docker-compose.yml up",
    "dev:app": "npm-run-all -p nodemon-sass nodemon-pug nodemon-webpack nodemon-dev-server",
    "nodemon-dev-server": "SECRET=my-secret DB=localhost PORT=3200 nodemon server/index.js --config ./nodemon-server.json",
    "build:sass": "sass ./front/styles/globalStyles.sass ./dist/styles/styles.css --no-source-map",
    "nodemon-sass": "nodemon --exec 'npm run build:sass' --config ./nodemon-sass.json",
    "build:pug": "pug ./front/index.pug --out ./dist -P",
    "nodemon-pug": "nodemon --exec 'npm run build:pug' --config ./nodemon-pug.json",
    "build:webpack": "webpack --config ./front/webpack.config.js",
    "nodemon-webpack": "nodemon --exec 'npm run build:webpack' --config ./nodemon-webpack.json"
  },
  "author": "",
  "license": "GPL-2.0-only",
  "dependencies": {
    "express": "^4.17.1",
    "redis": "^2.8.0",
    "socket.io": "^2.4.0"
  },
  "devDependencies": {
    "css-loader": "^3.3.2",
    "eslint": "^7.0.0",
    "eslint-config-standard": "^14.1.1",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.1",
    "eslint-plugin-vue": "^6.2.2",
    "fibers": "^4.0.2",
    "node-sass": "^4.14.1",
    "npm-run-all": "^4.1.5",
    "pug": "^3.0.1",
    "pug-cli": "^1.0.0-alpha6",
    "pug-plain-loader": "^1.0.0",
    "sass": "^1.23.7",
    "sass-loader": "^8.0.0",
    "vue": "^2.6.10",
    "vue-loader": "^15.7.2",
    "vue-style-loader": "^4.1.2",
    "vue-template-compiler": "^2.6.10",
    "webpack": "^4.41.2",
    "webpack-cli": "^3.3.10"
  }
}
